@model GovernmentTaxPrj.Models.TaxTransaction

@{
    ViewData["Title"] = "Edit";
}

<section class="content-header">
    <h1>အခွန်လုပ်ငန်းစဥ်ကိုပြန်လည်ပြုပြင်ပါ</h1>
</section>
<section class="content">
    <div class="box box-default">
        <div class="box-header with-border">
            <h3 class="box-title">အခွန်လုပ်ငန်းစဥ်ကိုပြန်လည်ပြုပြင်ခြင်း</h3>
        </div>
        <div class="box-body">
            <hr />
            <div class="row">
                <div class="col-md-4">
                    <form asp-action="Edit">
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                        <input type="hidden" asp-for="Id" />
                        <div class="form-group">
                            <label asp-for="IncomeTypeId" class="control-label"></label>
                            <select asp-for="IncomeTypeId" class="form-control" asp-items="ViewBag.IncomeTypeId"></select>
                            <span asp-validation-for="IncomeTypeId" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="TotalIncome" class="control-label"></label>
                            <input asp-for="TotalIncome" class="form-control" />
                            <span asp-validation-for="TotalIncome" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="TaxAmount" class="control-label"></label>
                            <input asp-for="TaxAmount" class="form-control" />
                            <span asp-validation-for="TaxAmount" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <input type="submit" value="Save" class="btn btn-primary" />
                        </div>
                    </form>
                </div>
            </div>

            <div>
                <a class="btn btn-primary pull-right" asp-action="Index">Back to List</a>
            </div>
        </div>
    </div>
</section>
@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
