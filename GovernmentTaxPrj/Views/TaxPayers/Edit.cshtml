@model GovernmentTaxPrj.Models.TaxPayer

@{
    ViewData["Title"] = "Edit";
}
<section class="content-header">
    <h1>အခွန်ဆောင်ထားသူကိုပြန်လည်ပြုပြင်ပါ</h1>
</section>
<section class="content">
    <div class="box box-default">
        <div class="box-header with-border">
            <h3 class="box-title">အခွန်ဆောင်ထားသူကိုပြန်လည်ပြုပြင်</h3>
        </div>
        <div class="box-body">           
            <hr />
            <div class="row">
                <div class="col-md-4">
                    <form asp-action="Edit">
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                        <input type="hidden" asp-for="Id" />
                        <div class="form-group">
                            <label asp-for="Name" class="control-label"></label>
                            <input asp-for="Name" class="form-control" />
                            <span asp-validation-for="Name" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="TinNumber" class="control-label"></label>
                            <input asp-for="TinNumber" class="form-control" />
                            <span asp-validation-for="TinNumber" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="Address" class="control-label"></label>
                            <input asp-for="Address" class="form-control" />
                            <span asp-validation-for="Address" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="Nrc" class="control-label"></label>
                            <input asp-for="Nrc" class="form-control" />
                            <span asp-validation-for="Nrc" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="TaxType" class="control-label"></label>
                            <input asp-for="TaxType" class="form-control" />
                            <span asp-validation-for="TaxType" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="TownshipId" class="control-label"></label>
                            <select asp-for="TownshipId" class="form-control" asp-items="ViewBag.TownshipId"></select>
                            <span asp-validation-for="TownshipId" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <input type="submit" value="Save" class="btn btn-primary" />
                        </div>
                    </form>
                </div>
            </div>

            <div>
                <a class="btn btn-primary pull-right" asp-action="Index">Back to List</a>
            </div>
        </div>
    </div>
</section>
@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
