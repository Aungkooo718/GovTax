@model GovernmentTaxPrj.Models.BudgetYear

@{
    ViewData["Title"] = "Edit";
}
<section class="content-header">
    <h1>ဘဏ္ဍာနစ်ကိုပြန်လည်ပြုပြင်ပါ</h1>
</section>
